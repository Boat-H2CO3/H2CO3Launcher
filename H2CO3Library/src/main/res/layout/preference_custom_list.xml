<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <org.koishi.launcher.h2co3.resources.component.H2CO3CardView
        android:id="@+id/listPreferenceCard"
        style="@style/Theme.H2CO3.CardViewOutlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTitle"
                style="@style/Theme.H2CO3.CardTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="List Preference" />

            <TextView
                android:id="@+id/textViewValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/app_15dp"
                android:text="Select an option"
                android:textAppearance="?attr/textAppearanceCaption" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_launcher_open"
                android:tint="?attr/colorOnSurface" />

        </LinearLayout>

    </org.koishi.launcher.h2co3.resources.component.H2CO3CardView>

</merge>