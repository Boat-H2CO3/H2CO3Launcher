<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/app_15dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        app:layout_constraintEnd_toEndOf="@id/guide"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/guide_r" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/app_15dp"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/elevation_2"
        app:contentPaddingBottom="@dimen/app_15dp"
        app:contentPaddingTop="@dimen/app_15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide"
        app:strokeWidth="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <org.koishi.launcher.h2co3library.component.view.H2CO3LauncherButton
                android:id="@+id/offline"
                style="@style/Theme.H2CO3.CardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/app_15dp"
                android:layout_marginTop="@dimen/app_10dp"
                android:text="@string/account_methods_offline"
                app:icon="@drawable/ic_baseline_person_add_24"
                app:iconGravity="start"/>

            <org.koishi.launcher.h2co3library.component.view.H2CO3LauncherButton
                android:id="@+id/microsoft"
                style="@style/Theme.H2CO3.CardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/app_15dp"
                android:layout_marginTop="@dimen/app_10dp"
                android:text="@string/account_methods_microsoft"
                app:icon="@drawable/ic_baseline_microsoft_24"
                app:iconGravity="start"/>

            <ListView
                android:id="@+id/server_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/app_15dp"
                android:layout_marginTop="@dimen/app_10dp"
                android:layout_weight="1"
                android:dividerHeight="0dp" />
            <org.koishi.launcher.h2co3library.component.view.H2CO3LauncherButton
                android:id="@+id/add_login_server"
                style="@style/Theme.H2CO3.CardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/app_15dp"
                android:text="@string/account_create_server"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconGravity="start"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>