<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <RelativeLayout
        android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.koishi.launcher.h2co3.control.view.TouchPad
            android:id="@+id/touch_pad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <org.koishi.launcher.h2co3.control.view.LogWindow
            android:id="@+id/log_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ui_bg_color"
            android:clickable="false"
            android:focusable="false"
            android:visibility="gone"/>

        <org.koishi.launcher.h2co3library.component.view.H2CO3LauncherTextView
            android:id="@+id/fps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            app:use_theme_color="true" />

        <org.koishi.launcher.h2co3library.component.view.H2CO3LauncherImageView
            android:id="@+id/cursor"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/img_cursor"/>

        <org.koishi.launcher.h2co3library.component.view.H2CO3LauncherProgressBar
            android:id="@+id/launch_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <org.koishi.launcher.h2co3.control.keyboard.TouchCharInput
            android:id="@+id/input_scanner"
            android:layout_width="1px"
            android:layout_height="1px"
            android:background="@android:color/transparent"
            android:ems="10"
            android:imeOptions="flagNoFullscreen|flagNoExtractUi|flagNoPersonalizedLearning|actionDone"
            android:inputType="textFilter|textImeMultiLine|textAutoComplete|textAutoCorrect"/>

        <org.koishi.launcher.h2co3.control.view.GameItemBar
            android:id="@+id/game_item_bar"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <include
            layout="@layout/menu_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <include
            layout="@layout/menu_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>